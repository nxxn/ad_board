<div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= simple_form_for task do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.association :game %>
          <%= f.association :quest_type %>
          <%= f.association :play_methods, as: :check_boxes, label: "Play Methods:" %>
          <label for="task_estimated_price">Price</label>
          <%= f.input :estimated_price, label: false, :input_html => { style: "width: 150px;" }  %>
          <!-- <%= f.input :term do %>
            <%= f.select :term, ["This week", "ASAP", "Today"] %>
          <% end %> -->
          <button type="submit" class="create_task_button">+ Create quest</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
